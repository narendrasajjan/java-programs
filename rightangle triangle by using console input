//by using console input
import java.util.Scanner;
class Main {
    public static void main(String[] args) {
        int rows;
        System.out.println("enter rows : ");
        Scanner sc = new Scanner(System.in);
        rows = sc.nextInt();
        for(int i =0;i<=7;i++){
            for(int j = 0;j<=i;j++){
                System.out.print("* ");
            }
            System.out.println();
        }
        
    }
}
